<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="28dp"
            android:layout_marginTop="28dp"
            android:id="@+id/dayStrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월요일"
            android:textStyle="bold"
            android:textSize="32dp"/>

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/dateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11월 7일"
            android:layout_toRightOf="@id/dayStrText"
            android:layout_alignBaseline="@id/dayStrText"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/yearText"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_below="@id/dayStrText"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8dp"
                        android:background="@color/colorMint"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:text="아침"/>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:textSize="20dp"
                    android:id="@+id/breakfastText"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8dp"
                        android:background="@color/colorMint"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:text="점심"/>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:textSize="20dp"
                    android:id="@+id/lunchText"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="8dp"
                        android:background="@color/colorMint"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24dp"
                        android:text="저녁"/>

                </LinearLayout>

                <TextView
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:textSize="20dp"
                    android:id="@+id/dinnerText"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>