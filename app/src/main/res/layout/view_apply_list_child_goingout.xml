<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/layout_apply_list_child_goingout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@color/colorNo3">

        <ImageView
            android:id="@+id/iv_apply_list_child_goingout"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/apply_stay_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:gravity="center"
            android:layout_alignTop="@id/iv_apply_list_child_goingout"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:layout_toLeftOf="@id/iv_apply_list_child_goingout"
            android:layout_toStartOf="@id/iv_apply_list_child_goingout"
            android:paddingLeft="16dp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:background="@drawable/apply_list_speech_bubble_lg"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="토요일"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/switch_apply_list_child_goingout_saturday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:switchMinWidth="56dp" />
            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="일요일"
                    android:textSize="24sp" />

                <Switch
                    android:id="@+id/switch_apply_list_child_goingout_sunday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:switchMinWidth="56dp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_apply_list_child_goingout_apply"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/iv_apply_list_child_goingout"
            android:layout_marginTop="32dp"
            android:elevation="8dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/all_button_shape"
            android:text="신청"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>