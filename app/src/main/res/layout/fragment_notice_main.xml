<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@color/colorNo6"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <RelativeLayout
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_notice_main_rule"
                android:layout_marginBottom="6dp"
                android:src="@drawable/notice_main_icon"
                android:elevation="3dp"
                android:background="@drawable/all_button_shape"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="98dp"
                android:layout_height="36dp" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/notice_rule_icon"
                        android:layout_centerInParent="true"
                        android:src="@drawable/notice_rule_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="28dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="기숙사 규정"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_notice_main_notification"
                android:layout_marginBottom="6dp"
                android:src="@drawable/notice_main_icon"
                android:elevation="3dp"
                android:background="@drawable/all_button_shape"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="98dp"
                android:layout_height="36dp" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/notice_notification_icon"
                        android:src="@drawable/notice_notification_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="28dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="공지사항"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <RelativeLayout
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_notice_main_question"
                android:layout_marginBottom="10dp"
                android:src="@drawable/notice_main_icon"
                android:elevation="3dp"
                android:background="@drawable/all_button_shape"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="98dp"
                android:layout_height="36dp" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/notice_question_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="28dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="자주 하는 질문"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:paddingTop="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_notice_main_facility"
                android:layout_marginBottom="10dp"
                android:src="@drawable/notice_main_icon"
                android:elevation="3dp"
                android:background="@drawable/all_button_shape"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="98dp"
                android:layout_height="36dp" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@drawable/notice_facility_icon"
                        android:layout_width="54dp"
                        android:layout_height="54dp" />

                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="28dp"
                        android:textSize="18dp"
                        android:textColor="#000000"
                        android:text="시설 고장 신고"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>